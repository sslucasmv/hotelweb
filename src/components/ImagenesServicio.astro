---

// src/components/ServiciosEmpresas.astro
import { Image } from 'astro:assets';

interface Props {
  nombre: string;
  imagen: ImageMetadata;
}

const { nombre, imagen } = Astro.props;

---

<div class="group">
    <div class="aspect-square w-full rounded-xl overflow-hidden shadow-sm border border-gray-200 p-1">
        <Image 
            src={imagen} 
            alt={`${nombre} en Mar del Plata`} 
            width={400} 
            height={400}
            class="w-full h-full object-cover transition-transform group-hover:scale-110 rounded-lg" 
        />
    </div>
    <p class="text-[11px] font-bold text-gray-600 mt-2 text-center uppercase tracking-widest">{nombre}</p>
</div>