import { Icon } from 'astro-icon/components';
const { name, titulo, descripcion } = Astro.props

---

<div class="flex flex-col items-center p-4 rounded-xl border border-gray-dark/20 shadow-sm bg-gray">
   <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center mb-3 ">
     <Icon name={`material-symbols:${name}`} class="text-gray-dark/70 text-xl w-6 h-6" />
    </div>
    <h3 class="text-m font-bold  text-gray-dark/90">{titulo}</h3>
    <p class="text-gray-600 text-[12px]">{descripcion}</p>
</div>


